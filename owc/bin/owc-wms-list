#! /bin/sh
#check the param
folder="`dirname $0`"
if [ -z "$1"  ]
then
	echo "Error ! Missing Parameters"
	echo "Usage: owc-wms-list <getCapabilities url> " >&2
	echo "Lists the layers available on a OGC WMS (1.1.1 and 1.3.0) GetCapabilities documents " >&2
        exit -1
fi
url=$1
curl "$url" | xsltproc --novalid --stringparam mode "list" $folder/../xslt/wms/wms-utils.xsl  -

